
<%= form_for @building do |f| %>
    <div>    
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :country %>
    <%= f.text_field :country %>
    </div>
    <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
    </div>
    <div>
    <%= f.label :rent_per_floor %>
    <%= f.number_field :rent_per_floor %>
    </div>
    <div>
    <%= f.label :number_of_floors %>
    <%= f.number_field :number_of_floors %>
    </div>
    <%= f.submit %>
<% end %>