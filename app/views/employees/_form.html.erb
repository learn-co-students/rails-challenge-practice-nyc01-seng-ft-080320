<% if flash[:errors]%>
    <h3>Errors:</h3>
    <ul>
    <% flash[:errors].each do |msg|%>
    <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @employee do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :company %>
    <%= f.collection_select :company_id, Company.all, :id, :name %>
<%= f.submit %>
<% end%>